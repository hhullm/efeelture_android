<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical" >
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:background="#127C56"
            android:text="设置"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/setting_backbutton"
            android:layout_width="25dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/return2" />

       </FrameLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="none" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/setting_button1"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/settingbutton"
                    android:gravity="left"
                    android:text="  新消息提醒 "
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/setting_button2"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/settingbutton"
                    android:gravity="left"
                    android:text="  勿扰模式"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/setting_button3"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/settingbutton"
                    android:gravity="left"
                    android:text="  修改密码"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/setting_button4"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/settingbutton"
                    android:gravity="left"
                    android:text="  隐私"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/setting_button5"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/settingbutton"
                    android:gravity="left"
                    android:text="  空间清理"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/setting_button6"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/settingbutton"
                    android:gravity="left"
                    android:text="  版本更新"
                    android:textSize="20sp" />
                <Button
                    android:id="@+id/setting_button9"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/settingbutton"
                    android:gravity="left"
                    android:text="  设备信息"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/setting_button7"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/settingbutton"
                    android:gravity="left"
                    android:text="  使用帮助"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/setting_button8"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/settingbt2"
                    android:gravity="center"
                    
                    android:text="  退出登陆"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</RelativeLayout>