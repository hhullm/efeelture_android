<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" >
<ScrollView 
    	android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            
            android:background="@drawable/lightbackground"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp" 
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/lgnew_imageView_bg"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/back" 
                    android:clickable="true"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:id="@+id/lgnew_textView_maintitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_weight="1"
                    android:textSize="25sp"
                    android:clickable="true"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="灯光控制" />

                <TextView
                    android:id="@+id/lgnew_textView_title2"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:clickable="true"
                    android:layout_gravity="center_vertical"
                    android:text=" " />

            </LinearLayout>

            <TextView
                android:id="@+id/lgnew_textView_dangqian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="2"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:clickable="true"
                android:text="当前模式" />
            <TextView
                android:id="@+id/lg_textView3_zidong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="1"
                android:clickable="true"
                android:textColor="@color/white"
                android:textSize="20sp"
                
                android:text="自动" />
            <TextView
                android:id="@+id/lg_textView_xuanxiang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:clickable="true"
                android:layout_weight="2"
                android:textColor="@color/white"
                android:textSize="33sp"
                android:text="派对" />
            
            
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="400dp"
            
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" 
                android:layout_weight="1">

                <TextView
                    android:id="@+id/lgn_textView1_sdms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_gravity="center_vertical"
                    android:textSize="18sp"
                    android:clickable="true"
                    android:text="手动模式" 
                    android:paddingLeft="30dp"/>

                <ImageView
                    android:id="@+id/lgn_imageView_off1"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:clickable="true"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/lgt_onoff" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp" 
                android:layout_weight="1">

                <TextView
                    android:id="@+id/lgn_textView1_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="30dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:clickable="true"
                    android:text="1"
                    android:textColor="@drawable/textcolor"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/lgn_textView1_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@drawable/textcolor"
                    android:layout_gravity="center_vertical"
                    android:textSize="30sp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="2" 
                    />
                <TextView
                    android:id="@+id/lgn_textView1_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@drawable/textcolor"
                    android:layout_gravity="center_vertical"
                    android:textSize="30sp"
                    android:clickable="true"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="3" 
                   />
                <TextView
                    android:id="@+id/lgn_textView1_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@drawable/textcolor"
                    android:layout_gravity="center_vertical"
                    android:textSize="30sp"
                    android:clickable="true"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="4" 
                    />

                <TextView
                    android:id="@+id/lgn_textView1_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="30dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="5"
                    android:textColor="@drawable/textcolor"
                    android:textSize="30sp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" 
                android:layout_weight="1">

                <TextView
                    android:id="@+id/lgn_textView1_zdms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_gravity="center_vertical"
                    android:textSize="18sp"
                    android:clickable="true"
                    android:text="自动模式" 
                    android:paddingLeft="30dp"/>

                <ImageView
                    android:id="@+id/lgn_imageView_off2"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:clickable="true"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/lgt_onoff" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center" 
                android:layout_weight="1">
                
                <View android:layout_height="1px" 
                    android:background="#000000" 
                    android:layout_width="80dp"
                    android:layout_gravity="center_vertical">
                    
                </View>
                <TextView
                    android:id="@+id/lgn_textView1_cj"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_gravity="center_vertical"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:clickable="true"
                    android:text="场景" 
                    />

                <View android:layout_height="1px" 
                    android:background="#000000" 
                    android:layout_width="80dp"
                    android:layout_gravity="center_vertical">
                    
                </View>

            </LinearLayout>

            <LinearLayout
