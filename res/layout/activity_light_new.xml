                    android:id="@+id/lgn_textView1_kt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="30dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:clickable="true"
                    android:text="客厅"
                    android:textColor="@drawable/textcolor"
                    android:textSize="23sp" 
                    
                    />

                <TextView
                    android:id="@+id/lgn_textView1_ws"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@drawable/textcolor"
                    android:layout_gravity="center_vertical"
                    android:textSize="23sp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="卧室" 
                   />
                <TextView
                    android:id="@+id/lgn_textView1_cf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@drawable/textcolor"
                    android:layout_gravity="center_vertical"
                    android:textSize="23sp"
                    android:clickable="true"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="厨房" 
                    />

                <TextView
                    android:id="@+id/lgn_textView1_yy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="30dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="影院"
                    android:clickable="true"
                    android:textColor="@drawable/textcolor"
                    android:textSize="23sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center" 
                android:layout_weight="1">
                
                <View android:layout_height="1px" 
                    android:background="#000000" 
                    android:layout_width="80dp"
                    android:layout_gravity="center_vertical">
                    
                </View>
                <TextView
                    android:id="@+id/lgn_textView1_zt"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_gravity="center_vertical"
                    android:textSize="18sp"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="状态" 
                    />

                <View android:layout_height="1px" 
                    android:background="#000000" 
                    android:layout_width="80dp"
                    android:layout_gravity="center_vertical">
                    
                </View>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp" 
                android:layout_weight="1">

                <TextView
                    android:id="@+id/lgn_textView1_xx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="30dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:clickable="true"
                    android:text="休息"
                    android:textColor="@drawable/textcolor"
                    android:textSize="23sp" />

                <TextView
                    android:id="@+id/lgn_textView1_pd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@drawable/textcolor"
                    android:layout_gravity="center_vertical"
                    android:textSize="23sp"
                    android:clickable="true"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="派对" 
                   />
                <TextView
                    android:id="@+id/lgn_textView1_gz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@drawable/textcolor"
                    android:layout_gravity="center_vertical"
                    android:textSize="23sp"
                    android:clickable="true"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="工作" 
                    />

                <TextView
                    android:id="@+id/lgn_textView1_mx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="30dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:clickable="true"
                    android:text="冥想"
                    android:textColor="@drawable/textcolor"
                    android:textSize="23sp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp" 
                android:layout_weight="1">

                

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</ScrollView>
</RelativeLayout>
