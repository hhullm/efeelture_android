<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lightbeijing"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="1" >

        <ImageButton
            android:id="@+id/light_scene_imageButton5"
            android:layout_width="25dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/retu" />

        <ImageButton
            android:id="@+id/light_scene_imageButton1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignTop="@+id/light_scene_imageButton2"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="72dp"
            android:layout_toRightOf="@+id/light_scene_imageButton5"
            android:background="@drawable/woshi2"
            android:scaleType="fitXY" />

        <ImageButton
            android:id="@+id/light_scene_imageButton2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@+id/light_scene_imageButton5"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="18dp"
            android:layout_toRightOf="@+id/light_scene_imageButton1"
            android:background="@drawable/cinema"
            android:scaleType="fitXY" />

        <ImageButton
            android:id="@+id/light_scene_imageButton3"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@+id/light_scene_imageButton1"
            android:layout_toRightOf="@+id/light_scene_imageButton4"
            android:background="@drawable/livingroom"
            android:scaleType="fitXY" />

        <ImageButton
            android:id="@+id/light_scene_imageButton4"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="59dp"
            android:layout_toRightOf="@+id/light_scene_imageButton5"
            android:background="@drawable/kitchen"
            android:scaleType="fitXY" />

    </RelativeLayout>

</LinearLayout>
